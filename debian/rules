#!/usr/bin/make -f
# -*- makefile -*-
export DH_VERBOSE=1
NPROCS:=$(shell grep -c ^processor /proc/cpuinfo)
export DEB_BUILD_OPTIONS=parallel=$(NPROCS)

%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- -- -DBUILD_ONLY_ELISE=ON \

override_dh_auto_install:
	dh_auto_install
	dh_bash-completion

